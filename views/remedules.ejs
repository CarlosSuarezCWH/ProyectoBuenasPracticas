<!DOCTYPE html>
<html>
<head>
    <title>Remedules</title>
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container">
        <h1 class="my-4">Lista de Remedules</h1>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Alumno</th>
                    <th>Materia</th>
                    <th>Carrera</th>
                    <th>Estatus</th>
                </tr>
            </thead>
            <tbody>
                <% remedules.forEach(remedule => { %>
                    <tr>
                        <td><%= remedule.alumno.nombre %></td>
                        <td><%= remedule.materia %></td>
                        <td><%= remedule.carrera %></td>
                        <td><%= remedule.estatus %></td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
        <h2 class="my-4">Agregar Remedule</h2>
        <form action="/remedules" method="post">
            <div class="form-group">
                <label for="alumno">Alumno:</label>
                <input type="text" class="form-control" id="alumno" name="alumno">
            </div>
            <div class="form-group">
                <label for="materia">Materia:</label>
                <input type="text" class="form-control" id="materia" name="materia">
            </div>
            <div class="form-group">
                <label for="carrera">Carrera:</label>
                <input type="text" class="form-control" id="carrera" name="carrera">
            </div>
            <div class="form-group">
                <label for="estatus">Estatus:</label>
                <select class="form-control" id="estatus" name="estatus">
                    <option value="pagado">Pagado</option>
                    <option value="no pagado">No Pagado</option>
                </select>
            </div>
            <button type="submit" class="btn btn-primary">Agregar</button>
        </form>
        <a href="/" class="btn btn-secondary mt-4">Volver a la p√°gina principal</a>
    </div>
</body>
</html>
